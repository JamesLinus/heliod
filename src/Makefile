BUILD_ROOT=..
include $(BUILD_ROOT)/make/defines.mk

ifneq ($(OS_ARCH),WINNT)
HERE=$(shell pwd)
else
# PWD on NT appends CRLF which we must strip:
HERE=$(shell pwd | $(TR) -d "\r\n")
endif

CONSTANTS_FILE=$(INTERNAL_ROOT)/constants.txt

SRC_DIRS=java support tools server sbc

NO_STD_ALL_TARGET=1
all:: genconstants
	for dir in $(SRC_DIRS); do \
		$(ECHO) "Building $${dir}:\t" `date`; \
		(cd $${dir} && $(MAKE) BUILD_VARIANT=$(BUILD_VARIANT) SECURITY_POLICY=$(SECURITY_POLICY) all) || exit 255; \
		cd ${HERE}; \
	done

genconstants:
	$(MKDIR_DASH_P) $(INTERNAL_ROOT)
	$(ECHO) internal_root=$(INTERNAL_ROOT) > $(CONSTANTS_FILE)
	$(ECHO) jdk_dir=$(JDK_DIR) >> $(CONSTANTS_FILE)
	$(ECHO) MajorVersion=$(MAJOR_VERSION)  >> $(CONSTANTS_FILE)
	$(ECHO) MinorVersion=$(MINOR_VERSION)  >> $(CONSTANTS_FILE)
	$(ECHO) PreviewVersion=$(VER_PREVIEW)  >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_ID=$(PRODUCT_ID) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_HEADER_ID=$(PRODUCT_HEADER_ID) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_HEADER_COMMENT=$(PRODUCT_HEADER_COMMENT) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_VERSION=$(PRODUCT_VERSION) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_FULL_VERSION=$(PRODUCT_FULL_VERSION) >> $(CONSTANTS_FILE)
	$(ECHO) Platform=$(OS_ARCH) >> $(CONSTANTS_FILE)
	$(ECHO) Architecture=$(BUILD_ARCH) >> $(CONSTANTS_FILE)
	$(ECHO) Security=$(SECURITY_POLICY) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_MULTIPROCESS=$(FEAT_MULTIPROCESS) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_INTERNAL_LOG_ROTATION=$(FEAT_INTERNAL_LOG_ROTATION) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_NOLIMITS=$(FEAT_NOLIMITS) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_TUNEABLE=$(FEAT_TUNEABLE) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_DAEMONSTATS=$(FEAT_DAEMONSTATS) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_CLUSTER=$(FEAT_CLUSTER) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_DYNAMIC_GROUPS=$(FEAT_DYNAMIC_GROUPS) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_PASSWORD_POLICIES=$(FEAT_PASSWORD_POLICIES) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_UPGRADE=$(FEAT_UPGRADE) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_PKCS_MODULES=$(FEAT_PKCS_MODULES) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_PAM=$(FEAT_PAM) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_GSS=$(FEAT_GSS) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_SEARCH=$(FEAT_SEARCH) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_SNMP=$(FEAT_SNMP) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_L10N=$(FEAT_L10N) >> $(CONSTANTS_FILE)
	$(ECHO) FEAT_SMF=$(FEAT_SMF) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_MAGNUS_CONF=$(PRODUCT_MAGNUS_CONF) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_WATCHDOG_BIN=$(PRODUCT_WATCHDOG_BIN) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_DAEMON_BIN=$(PRODUCT_DAEMON_BIN) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_I18N_DB=$(PRODUCT_I18N_DB) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_ADMSERV_NAME=$(PRODUCT_ADMSERV_NAME) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_PLATFORM_64_SUBDIR=$(PLATFORM_64_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_PLATFORM_SUBDIR=$(PLATFORM_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_PUBLIC_BIN_SUBDIR=$(PUBLIC_BIN_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_PRIVATE_BIN_SUBDIR=$(PRIVATE_BIN_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_LIB_SUBDIR=$(LIB_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_JAR_SUBDIR=$(JAR_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_RES_SUBDIR=$(RES_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_DTD_SUBDIR=$(DTD_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_TLD_SUBDIR=$(TLD_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_ICONS_SUBDIR=$(ICONS_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_INCLUDE_SUBDIR=$(INCLUDE_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_JDK_SUBDIR=$(JDK_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_PERL_SUBDIR=$(PERL_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_SNMP_SUBDIR=$(SNMP_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_INSTALL_SUBDIR=$(INSTALL_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_WEBAPP_SUBDIR=$(WEBAPP_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_PLUGINS_SUBDIR=$(PLUGINS_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_EXTRAS_SUBDIR=$(EXTRAS_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PRODUCT_SAMPLES_SUBDIR=$(SAMPLES_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PLATFORM_JES_LIB_SUBDIR=$(PLATFORM_JES_LIB_SUBDIR) >> $(CONSTANTS_FILE)
	$(ECHO) PLATFORM_JES_BINPATH=$(PLATFORM_JES_BINPATH) >> $(CONSTANTS_FILE)
	$(ECHO) PLATFORM_JES_LIBPATH=$(PLATFORM_JES_LIBPATH) >> $(CONSTANTS_FILE)
	$(ECHO) PLATFORM_JES_LIBPATH_64=$(PLATFORM_JES_LIBPATH_64) >> $(CONSTANTS_FILE)
	$(ECHO) PLATFORM_JES_SERVER_CP=$(PLATFORM_JES_SERVER_CP) >> $(CONSTANTS_FILE)
	$(ECHO) PLATFORM_JES_CLI_CP=$(PLATFORM_JES_CLI_CP) >> $(CONSTANTS_FILE)
	$(ECHO) PLATFORM_JES_ADMIN_CP=$(PLATFORM_JES_ADMIN_CP) >> $(CONSTANTS_FILE)
	$(ECHO) PLATFORM_JES_ANT_CP=$(PLATFORM_JES_ANT_CP) >> $(CONSTANTS_FILE)
	$(ECHO) PLATFORM_JES_MFWK_HOME=$(PLATFORM_JES_MFWK_HOME) >> $(CONSTANTS_FILE)
	$(ECHO) PLATFORM_JES_PATCH_ID=$(PATCH_ID) >> $(CONSTANTS_FILE)
	$(PERL5) genProductConstants.pl $(CONSTANTS_FILE)

NO_STD_PUBLISH_RULE=1
publish:
	for dir in $(SRC_DIRS); do \
		$(ECHO) "Building $${dir}:\t" `date`; \
		(cd $${dir} && $(MAKE) BUILD_VARIANT=$(BUILD_VARIANT) SECURITY_POLICY=$(SECURITY_POLICY) publish) || exit 255; \
		cd ${HERE}; \
	done

clobber::
	for dir in $(SRC_DIRS); do \
		$(ECHO) "Building $${dir}:\t" `date`; \
		(cd $${dir} && $(MAKE) BUILD_VARIANT=$(BUILD_VARIANT) SECURITY_POLICY=$(SECURITY_POLICY) clobber) || exit 255; \
		cd ${HERE}; \
	done
	$(RM) -rf $(INTERNAL_ROOT)
	$(RM) -rf $(WORK_ROOT)

include $(BUILD_ROOT)/make/rules.mk
